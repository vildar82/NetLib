<Window x:Class="ProgressUtils.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgressUtils"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        BorderThickness="0"
        Topmost="True"
        WindowStartupLocation="CenterScreen" 
        Width="800" Height="800">
	<Grid>
		<local:ProgressRing Width="150" Height="150" Background="Blue" Foreground="Brown" VerticalAlignment="Center"
		                    HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
	</Grid>
</Window>
